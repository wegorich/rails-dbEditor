= form_for(@specialty) do |f|
  - if @specialty.errors.any?
    #error_explanation
      %h2
        = pluralize(@specialty.errors.count, "error")
        prohibited this specialty from being saved:
      %ul
        - @specialty.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :num
    %br/
    = f.number_field :num
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .actions
    = f.submit
