- content_for :aside do
  = render partial: 'events/aside/add_new'
  = render partial: 'shared/aside/search', locals:{url: search_events_path, search: @search}

= render partial: 'layouts/navigation', locals: {page_name: 'События'}

%table
  %thead
    %tr
      %th Start
      %th End
      %th Event type
      %th Name
      %th
      %th
      %th
  %tbody
    - @events.each do |event|
      %tr
        %td= event.start
        %td= event.end
        %td= event.event_type_id
        %td= event.name
        %td= link_to 'Show', event
        %td= link_to 'Edit', edit_event_path(event)
        %td= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }
