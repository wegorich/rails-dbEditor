= content_for :aside do
  = render partial: 'events/aside/show_list'
  = render partial: 'event_types/aside/new_event_type'
  = render partial: 'event_reports/aside/new_report'

= content_for :title do
  Событие
  = '"'+@event.name+'"' unless @event.name.nil?

.create
  = simple_form_for(@event) do |f|
    = f.error_notification
    = f.input :name, autofocus: true, label: 'Название события'
    = f.input :start, label: 'Дата начала'
    = f.input :end, label:'Дата завершения'
    = f.association :event_type, label:'Тип события'
    .input
      = f.submit 'Сохранить', class: 'btn btn-light-green'
