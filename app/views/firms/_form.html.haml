= form_for(@firm) do |f|
  - if @firm.errors.any?
    #error_explanation
      %h2
        = pluralize(@firm.errors.count, "error")
        prohibited this firm from being saved:
      %ul
        - @firm.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .actions
    = f.submit
